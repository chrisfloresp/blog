<%= form_for(@user) do |u| %>

<div class='field'>
    <%= u.label :nombre %>
    <%= u.text_field :nombre %>
</div>    

<div class='field'>
    <%= u.label :bio %>
    <%= u.text_area :bio, :cols => 30, rows: 20 %>
</div>

<div class='field'>
    <%= u.label :programa %>
    <%= u.check_box :programa, checked: "checked" %>
</div>  

<div class='field'>
        <% nombres = {'Marcos Uriel' => 'Uriel', 'Codigo Facilito' => 'CF', 'Dxv Tutoriales' => 'Dxv'}%>
    <fieldset >
   <% lista = nombres.sort %>
   <% lista.each do |nombre| %>
     <%= u.radio_button :nombre, nombre[1] %>
     <label for= "<%= nombre[1] %>"><%= nombre[0]%></label>
   <% end %>
    </fieldset>
</div>  
    
    

<% end %>